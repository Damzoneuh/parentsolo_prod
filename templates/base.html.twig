<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Parent solo - {% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" href="{{ asset('/img/FavIcon.png') }}" type="image/png"/>
        {% block stylesheets %}{{ encore_entry_link_tags('global') }}{% endblock %}
        <script async src="https://securepubads.g.doubleclick.net/tag/js/gpt.js"></script>
        <script>
            window.googletag = window.googletag || {cmd: []};
            googletag.cmd.push(function() {
                googletag.defineSlot('/21864984636/PSMR01', [300, 250], 'div-gpt-ad-1571670322825-0').addService(googletag.pubads());
                googletag.pubads().enableSingleRequest();
                googletag.enableServices();
            });
        </script>
    </head>
    <body>
    <div id="nav"></div>
        {% block body %}{% endblock %}
    {% if is_granted('ROLE_BASIC') or is_granted('ROLE_MEDIUM') or is_granted('ROLE_PREMIUM')%}
        <div id="toasts" data-user="{{ app.user.id }}"></div>
    {% endif %}
    {% if app.user is not null %}
        <div id="chat" data-user="{{ app.user.id }}"></div>
    {% endif %}
    <footer id="footer"></footer>
    <div id="cookies"></div>
{#        {% if is_granted('ROLE_BASIC') %}#}
{#            <div id="chat" data-user="{{ app.user.id }}" class="flex w-100 position-fixed bottom-0 justify-content-sm-around"></div>#}
{#        {% endif %}#}
        {% block javascripts %}
            {{ encore_entry_script_tags('footer') }}
            {{ encore_entry_script_tags('nav') }}
           {% if is_granted('ROLE_BASIC') or is_granted('ROLE_MEDIUM') or is_granted('ROLE_PREMIUM')%}
                {{ encore_entry_script_tags('toasts') }}
           {% endif %}
            {% if app.user is not null %}
                {{ encore_entry_script_tags('chat') }}
            {% endif %}
            {{ encore_entry_script_tags('cookies') }}
        {% endblock %}

    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    </body>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</html>
