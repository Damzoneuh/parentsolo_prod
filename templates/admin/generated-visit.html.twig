{% extends 'admin/base-admin.html.twig' %}
{% block title %}{{ parent() }}{% endblock %}
{% block javascripts %}{{ parent() }}{% endblock %}

{% block body %}{{ parent() }}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="rounded-more border-red pad-30 marg-top-10 marg-bottom-10">
                    <h2>Générer des visites</h2>
                    {{ form_start(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col">
                <div class="rounded-more border-red pad-30 marg-top-10 marg-bottom-10">
                    <h2>Visites générés</h2>
                    <table class="table table-striped table-danger">
                        <tbody>
                            {% if visits|length > 0 %}
                                {% for visit in visits %}
                                    <tr>
                                        <td>{{ visit.profil[0].pseudo }}</td>
                                        <td>{{ visit.date|date('d-m-Y') }}</td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}