{% extends 'admin/base-admin.html.twig' %}
{% block javascripts %}{{ parent() }}{% endblock %}
{% block title %}{{ parent() }}{% endblock %}

{% block body %}{{ parent() }}
<div class="container-fluid">
    <div class="row">
       {% for helvetica in helveticas %}
           {% if messages[helvetica.id] %}
               <div class="col">
                   <div class="rounded-more border-red marg-top-10 marg-bottom-10">
                       <div class="d-flex justify-content-around marg-bottom-10 marg-top-10">
                            <div class="m-auto"> {{ helvetica.pseudo }} as de nouveaux messages</div>
                           <div class="m-auto">
                               <a class="btn btn-group btn-info" href="{{ path('admin_conversation_show', {id: helvetica.id}) }}">Voir</a>
                           </div>
                       </div>

                   </div>
               </div>
           {% endif %}
        {% endfor %}
    </div>
</div>
{% endblock %}