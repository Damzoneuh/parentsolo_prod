{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Parameters{% endblock %}
{% block javascripts %}{{ parent() }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {% for message in app.flashes('success') %}
                <div class="col-12">
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
            <div class="col-lg-6 col-md-6 col-12">
                <div class="border-red rounded-more pad-30 marg-top-10 marg-bottom-10">
                    <h1>{{ trans.settings }}</h1>
                    <p>{{ trans['p1'] }}</p>
                    <p>
                        {{ trans['p2'] }}
                        <span class="text-danger">{{ trans['pred'] }}</span>
                    </p>
                    {{ form_start(settingsForm) }}
                    <div class="form-group d-flex justify-content-between align-items-center">
                        <div>{{ trans.gender }}</div>
                        <div >
                            {% if isMan is even %}
                                {{ trans.woman }}
                            {% else %}
                                {{ trans.man }}
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-between align-items-center">
                        <div>{{ form_label(settingsForm.name) }} <span class="text-danger">*</span></div>
                        <div class=""> {{ form_widget(settingsForm.name) }}</div>
                    </div>
                    <div class="form-group d-flex justify-content-between align-items-center">
                        <div>{{ form_label(settingsForm.firstname) }} <span class="text-danger">*</span></div>
                        <div class=""> {{ form_widget(settingsForm.firstname) }}</div>
                    </div>
                    <div class="form-group d-flex justify-content-between align-items-center">
                        <div>{{ form_label(settingsForm.address) }} <span class="text-danger">*</span></div>
                        <div class=""> {{ form_widget(settingsForm.address) }}</div>
                    </div>
                    <div class="form-group d-flex justify-content-between align-items-center">
                        <div>{{ form_label(settingsForm.npa) }} <span class="text-danger">*</span></div>
                        <div class=" d-flex align-items-center justify-content-between"> {{ form_widget(settingsForm.npa) }}</div>
                        <div class="">{{ app.user.profil.city.name }} | {{ app.user.profil.city.canton.name }}</div>
                    </div>
                    <div class="form-group d-flex justify-content-between align-items-center">
                        <div>{{ form_label(settingsForm.communication_lang) }} <span class="text-danger">*</span></div>
                        <div class=""> {{ form_widget(settingsForm.communication_lang) }}</div>
                    </div>
                    <div class="form-group d-flex justify-content-between align-items-center">
                        <div>{{ form_label(settingsForm.is_looking_for) }} <span class="text-danger">*</span></div>
                        <div class=""> {{ form_widget(settingsForm.is_looking_for) }}</div>
                    </div>
                    <div class="form-group text-center">
                        {{ form_widget(settingsForm.submit) }}
                    </div>
                    {{ form_end(settingsForm) }}
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <div class="testimony-wrap">
                    <h1>{{ trans['connection'] }}</h1>
                    <div class="marg-bottom-10 marg-top-10">{{ trans.alias }} : {{ app.user.pseudo }} </div>
                    <div class="marg-bottom-10 ">Email : {{ app.user.email }}</div>
                    <div class="text-center"><a href="{{ path('user_reset_mail') }}" class="btn btn-group btn-outline-light">{{ trans.change_password }}</a> </div>
                </div>
                <div class="diary-wrap">
                    <h1>{{ trans.notification }}</h1>
                    <p>{{ trans.textnotif }}</p>
                    {{ form_start(notificationForm) }}
                    {{ form_widget(notificationForm.notification) }}
                    <div class="marg-top-20 text-center">{{ form_widget(notificationForm.submit) }}</div>
                    {{ form_end(notificationForm) }}
                    {% if app.user.subscribe %}
                        <p>{{ trans.deadline }} : {{ app.user.subscribe.deadline|date('d-m-y') }}</p>
                    {% endif %}
                </div>
                <div class="rounded-more border-grey marg-top-10 d-flex flex-column justify-content-center align-items-center">
                    <div class="d-flex justify-content-between align-items-center w-75 pad-10" >
                        <a href="{{ path('faq') }}" class="text-grey">{{ trans.faq }} </a>
                        <a href="{{ path('testimony') }}" class="text-grey">{{ trans.let_testy }}</a>
                    </div>
                    <div class="d-flex justify-content-between align-items-center pad-10 w-75">
                        <a href="{{ path('contact') }}" class="text-grey">{{ trans.contact }} </a>
                        <a href="{{ path('unsubscribe') }}" class="text-grey">{{ trans.stopsub }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
{% endblock %}
